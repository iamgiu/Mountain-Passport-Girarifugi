        <!-- SPLASH ACTIVITY -->
        <activity
            android:name=".user.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MountainPassportGirarifugi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SIGN IN ACTIVITY -->
        <activity
            android:name=".user.SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.MountainPassportGirarifugi" />

        <!-- SIGN UP ACTIVITY -->
        <activity
            android:name=".user.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.MountainPassportGirarifugi" />

        <!-- MAIN ACTIVITY -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.MountainPassportGirarifugi" />

        <!-- Profile Setup Activity -->
        <activity
            android:name=".user.ProfileSetupActivity"
            android:exported="false" />

        <!-- Image Crop Activity -->
        <activity
            android:name=".ui.profile.settings.ImageCropActivity"
            android:theme="@style/Theme.Material3.DynamicColors.Dark.NoActionBar"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <!-- Firebase Messaging Service -->
        <service
            android:name=".utils.MountainPassportFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- ZXing Scanner Activity -->
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />

    </application>

</manifest>