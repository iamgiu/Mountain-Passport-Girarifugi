<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/green_2"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: avatar + nome utente + azione -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Avatar colorato -->
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/avatarContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/green">

                    <TextView
                        android:id="@+id/avatarInitials"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MR"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNotifica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mario Rossi ha visitato un rifugio"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_semibold" />

                <TextView
                    android:id="@+id/textTempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 ore fa"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Dettagli rifugio con immagine -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <!-- Immagine rifugio con angoli arrotondati -->
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageRifugio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mountain_background" />

            </androidx.cardview.widget.CardView>

            <!-- Dettagli rifugio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomeRifugio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rifugio Laghi Verdi"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:id="@+id/localitaRifugio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Val d'Aosta"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/altitudineRifugio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Altitudine: 1.850 m"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginTop="1dp" />

                <!-- Punti guadagnati -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_leaderboard_24"
                        app:tint="@color/green"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/textPunti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+75 punti"
                        android:textColor="@color/green"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat_bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Freccia per andare ai dettagli -->
            <ImageView
                android:id="@+id/arrowDetail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_forward_24"
                app:tint="@color/green"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>