<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="200dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- SFONDO CON IMMAGINE -->
        <ImageView
            android:id="@+id/imageRifugio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mountain_background"
            android:contentDescription="Immagine rifugio" />

        <!-- Overlay scuro sopra l'immagine -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000" />

        <!-- Badge bonus punti (visibile solo per rifugi bonus) -->
        <LinearLayout
            android:id="@+id/badgeBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="12dp"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:tint="@color/white"
                android:layout_marginEnd="2dp" />

            <TextView
                android:id="@+id/textBonusPunti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+50"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold" />

        </LinearLayout>

        <!-- CONTENUTO RIFUGIO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nome Rifugio -->
            <TextView
                android:id="@+id/textNomeRifugio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rifugio Esempio"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Spacer per spingere il contenuto in basso -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Layout in basso con informazioni -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Riga con altitudine e distanza -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_route_24"
                            app:tint="@color/white"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/textDistanza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="2.5 km"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_semibold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_cabin_24"
                            app:tint="@color/white"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/textAltitudine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="1800m"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_semibold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Riga con difficoltÃ  e tempo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_footprint_24"
                            app:tint="@color/white"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/textDifficolta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Facile"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_semibold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_schedule_24"
                            app:tint="@color/white"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/textTempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="1h 30m"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_semibold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/buttonFreccia"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_arrow_forward_24"
            android:contentDescription="Vai ai dettagli"
            app:tint="@color/white" />

    </FrameLayout>

</androidx.cardview.widget.CardView>