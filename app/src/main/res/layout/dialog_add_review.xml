<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/stats_card_background">

    <!-- Titolo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aggiungi Recensione"
        android:textColor="@color/blue_black"
        android:textSize="22sp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Rating -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valutazione"
            android:textColor="@color/blue_black"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginBottom="8dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="1"
            android:rating="5.0"
            android:isIndicator="false"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:progressTint="@color/blue_black"
            android:secondaryProgressTint="@color/gray"
            android:backgroundTint="@color/gray" />

    </LinearLayout>

    <!-- Commento -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commento"
            android:textColor="@color/blue_black"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:inputType="textMultiLine"
            android:textColor="@color/blue_black"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Scrivi la tua recensione..."
            android:background="@drawable/stats_card_background"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Pulsanti -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annulla"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invia"
            android:backgroundTint="@color/blue_black"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

</LinearLayout>
