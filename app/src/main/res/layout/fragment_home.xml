<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <!-- Header  -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_cabin_24"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_extrabold"
                android:text="Mountain Passport"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="Digital Girarifugi"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Benvenuto!"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Naviga tra i rifugi disponibili,\nricevi supporto, fatti guidare."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp" />

            <!-- Tabs Per te / Amici -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tab_per_te"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Per te"
                    android:textSize="18sp"
                    android:textColor="@color/green_black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/tab_amici"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Amici"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Contenuto Dinamico -->
            <LinearLayout
                android:id="@+id/contenutoAmici"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- RIFUGI CONTENT -->
                <LinearLayout
                    android:id="@+id/rifugiContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Card Il tuo punteggio -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:background="@drawable/gradient_green_card">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Il tuo punteggio"
                                    android:textColor="@color/white"
                                    android:textSize="23dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/montserrat_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Scopri come\nraggiungere i\ntuoi obiettivi!"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:lineSpacingExtra="2dp" />

                                <TextView
                                    android:id="@+id/textScore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/montserrat_semibold" />

                                <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="36dp"
                                    android:layout_marginTop="12dp"
                                    android:text="SCOPRI"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:backgroundTint="@color/white"
                                    app:cornerRadius="18dp"
                                    android:paddingHorizontal="16dp"
                                    android:fontFamily="@font/montserrat_bold" />

                            </LinearLayout>

                            <!-- Circular Progress -->
                            <RelativeLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_vertical">

                                <ProgressBar
                                    android:id="@+id/progressScore"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:indeterminateOnly="false"
                                    android:progress="0"
                                    android:max="100"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/circular_progress_thick" />

                                <TextView
                                    android:id="@+id/textScoreOverlay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/montserrat_bold" />
                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escursione programmata per domani"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold" />

                    <!-- Escursione programmata -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_marginTop="6dp">


                            <!-- SFONDO CON IMMAGINE -->
                            <ImageView
                                android:id="@+id/backgroundImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/mountain_background"
                                android:contentDescription="Sfondo rifugio" />

                            <!-- Overlay scuro sopra l'immagine -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#66000000" />

                            <!-- CONTENUTO ESCURSIONE -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <!-- Nome Rifugio Grande -->
                                <TextView
                                    android:id="@+id/textNomeRifugio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/montserrat_bold" />

                                <!-- Spacer per spingere il contenuto in basso -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <!-- Layout in basso con km/altitudine a sinistra e freccia a destra -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <!-- Riga con altitudine e distanza a sinistra -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_route_24"
                                            app:tint="@color/white"
                                            android:layout_gravity="center_vertical" />

                                        <TextView
                                            android:id="@+id/textDistanza"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="4dp"
                                            android:layout_marginEnd="12dp"
                                            android:textColor="@color/white"
                                            android:textSize="14sp"
                                            android:fontFamily="@font/montserrat_semibold" />

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_cabin_24"
                                            app:tint="@color/white"
                                            android:layout_gravity="center_vertical" />

                                        <TextView
                                            android:id="@+id/textAltitudine"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="4dp"
                                            android:textColor="@color/white"
                                            android:textSize="14sp"
                                            android:fontFamily="@font/montserrat_semibold" />
                                    </LinearLayout>

                                    <!-- Freccia a destra -->
                                    <ImageView
                                        android:id="@+id/buttonFreccia"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_arrow_forward_24"
                                        app:tint="@color/white" />

                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- SEZIONE RIFUGI DELLA SETTIMANA CON BONUS PUNTI -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <!-- Titolo sezione con icona bonus -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Rifugi della settimana"
                                android:textColor="@color/black"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat_bold" />

                        </LinearLayout>

                        <!-- RecyclerView orizzontale per rifugi bonus -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerRifugiBonus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="0dp"
                            android:paddingEnd="16dp"
                            android:clipToPadding="false"
                            tools:listitem="@layout/card_rifugio" />

                    </LinearLayout>

                    <!-- SEZIONE SUGGERIMENTI PERSONALIZZATI -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <!-- Titolo sezione -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ti potrebbe interessare..."
                                android:textColor="@color/black"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat_bold" />

                        </LinearLayout>

                        <!-- RecyclerView orizzontale per suggerimenti -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerSuggerimenti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="0dp"
                            android:paddingEnd="16dp"
                            android:clipToPadding="false"
                            tools:listitem="@layout/card_rifugio" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/amicicontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerFeedAmici"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/card_feed_amici"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Spaziatura finale per il fab -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Notification Bell -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNotifications"
        android:contentDescription="Notifiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/ic_notifications_black_24dp"
        app:backgroundTint="@color/green_black"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/light_green" />

</androidx.constraintlayout.widget.ConstraintLayout>