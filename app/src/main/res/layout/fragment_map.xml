<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="App Logo"
            android:src="@drawable/ic_launcher_foreground" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Ricerca dei Rifugi"
            android:textColor="@color/green_black"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Bottone Filtro Rifugi -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonFilterRifugi"
            android:contentDescription="Filtra rifugi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_24"
            app:backgroundTint="@color/green"
            app:fabSize="normal"
            app:tint="@color/green_black" />

    </LinearLayout>

    <!-- Mappa OSM -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"/>

    <!-- Bottone Mia Posizione -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonMyLocation"
        android:contentDescription="Vai alla mia posizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/ic_location_24"
        app:backgroundTint="@color/green_black"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/light_green" />

</androidx.constraintlayout.widget.ConstraintLayout>