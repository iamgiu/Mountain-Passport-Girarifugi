<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabForwardHome"
            android:contentDescription="Torna alla Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_reply_24"
            app:backgroundTint="@color/green"
            app:fabSize="normal"
            app:tint="@color/green_light" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="App Logo"
            android:src="@drawable/ic_launcher_foreground" />

    </LinearLayout>

    <!-- Contenuto principale -->
    <ScrollView
        android:id="@+id/scrollViewNotifications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Titolo pagina con stile identico alla home -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Notifiche"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Resta aggiornato sulle tue attività\ne quelle dei tuoi amici."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp" />

            <!-- Filtri notifiche con stile identico ai tab della home -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:padding="4dp">

                <TextView
                    android:id="@+id/filter_tutte"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Tutte"
                    android:textSize="18sp"
                    android:textColor="@color/green_black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/filter_rifugi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Rifugi"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/filter_amici"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Amici"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Sezione Notifiche Recenti -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recenti"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginBottom="16dp" />

            <!-- Lista notifiche recenti -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNotificationsRecent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="24dp"
                tools:listitem="@layout/item_notifications" />

            <!-- Sezione Notifiche Precedenti -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precedenti"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginBottom="16dp" />

            <!-- Lista notifiche precedenti -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNotificationsPrevious"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="24dp"
                tools:listitem="@layout/item_notifications" />

            <!-- Card Impostazioni Notifiche con stile simile al punteggio -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="@drawable/gradient_green_card">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personalizza"
                            android:textColor="@color/white"
                            android:textSize="23sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Gestisci le tue\npreferenze di\nnotifica"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:lineSpacingExtra="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnImpostazioni"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginTop="12dp"
                            android:text="IMPOSTAZIONI"
                            android:textColor="@color/green"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/white"
                            app:cornerRadius="18dp"
                            android:paddingHorizontal="16dp"
                            android:fontFamily="@font/montserrat_bold" />

                    </LinearLayout>

                    <!-- Icona impostazioni -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_notifications_black_24dp"
                        app:tint="@color/white"
                        android:alpha="0.8" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Spaziatura finale per il fab -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Empty state (nascosto di default) -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_notifications_black_24dp"
            android:alpha="0.3"
            app:tint="@color/green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nessuna notifica"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ti informeremo quando ci saranno novità"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>