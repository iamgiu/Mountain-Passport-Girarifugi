<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <!-- Header fisso in alto -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="App Logo"
            android:src="@drawable/ic_launcher_foreground" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSettings"
            android:contentDescription="impostazioni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_24"
            app:backgroundTint="@color/green_black"
            app:fabSize="normal"
            app:tint="@color/green_light" />

    </LinearLayout>

    <!-- ScrollView con contenuto -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_green"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Banner con foto profilo -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="284dp">

                <!-- Banner Background -->
                <ImageView
                    android:id="@+id/bannerImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/background1"
                    android:scaleType="centerCrop" />

                <!-- Overlay scuro -->
                <View
                    android:id="@+id/bannerOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#40000000" />

                <!-- Foto Profilo - posizionata correttamente -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/profileCard"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignBottom="@id/bannerImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-50dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/profileImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar_mario" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!-- Contenuto Profilo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="1dp"
                android:paddingEnd="16dp"
                android:paddingBottom="32dp">

                <!-- Nome e Cognome -->
                <TextView
                    android:id="@+id/fullNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Marco Rossi"
                    android:textColor="@color/blue_black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <!-- Username -->
                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="marcorossi_explorer"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/light_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Le tue statistiche"
                    android:textColor="@color/blue_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Container Statistiche -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- Punteggio Mensile -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stats_card_background"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_location_24"
                            app:tint="@color/blue_black"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/monthlyScoreTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="1,245"
                            android:textColor="@color/blue_black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Punteggio\nMensile"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Rifugi Visitati -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stats_card_background"
                        android:padding="16dp"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_cabin_24"
                            app:tint="@color/blue_black"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/visitedRefugesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="23"
                            android:textColor="@color/blue_black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rifugi\nVisitati"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Sezione Timbri -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="I tuoi timbri"
                    android:textColor="@color/blue_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- RecyclerView Timbri Orizzontale -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stampsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    tools:listitem="@layout/item_stamp"
                    tools:itemCount="6" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>