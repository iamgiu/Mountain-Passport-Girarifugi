<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_green">

    <!-- Header  -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_cabin_24"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_extrabold"
                android:text="Mountain Passport"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="Digital Girarifugi"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Modifica le tue informazioni personali"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:layout_marginBottom="32dp"
                android:layout_gravity="center_horizontal" />

            <!-- Nome Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nomeLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Nome"
                app:boxStrokeColor="@color/green_black"
                app:hintTextColor="@color/green_black"
                app:startIconDrawable="@drawable/ic_person_24"
                app:startIconTint="@color/green_black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nomeEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:textColor="@color/green_black"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cognome Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cognomeLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Cognome"
                app:boxStrokeColor="@color/green_black"
                app:hintTextColor="@color/green_black"
                app:startIconDrawable="@drawable/ic_person_24"
                app:startIconTint="@color/green_black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cognomeEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:textColor="@color/green_black"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nickname Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nicknameLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:hint="Nickname"
                app:boxStrokeColor="@color/green_black"
                app:hintTextColor="@color/green_black"
                app:helperText="SarÃ  visibile agli altri utenti"
                app:startIconDrawable="@drawable/ic_account_circle_24"
                app:startIconTint="@color/green_black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nicknameEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Account Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/green_black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Reset Password Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/resetPasswordButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:text="Reset Password"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:strokeColor="@color/green"
                app:strokeWidth="2dp"
                app:icon="@android:drawable/ic_secure"
                app:iconTint="@color/green"
                android:textAllCaps="false" />

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="32dp"
                android:text="Logout"
                android:textColor="@color/blue_black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:strokeColor="@color/blue_black"
                app:strokeWidth="2dp"
                app:icon="@drawable/ic_person_24"
                app:iconTint="@color/blue_black"
                android:textAllCaps="false" />


<!--            &lt;!&ndash; Spacer to push buttons to bottom &ndash;&gt;-->
<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0dp"-->
<!--                android:layout_weight="1" />-->

            <!-- Buttons Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <!-- Annulla Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/annullaButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Annulla"
                    android:textColor="@color/light_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    app:strokeColor="@color/light_blue"
                    app:strokeWidth="2dp"
                    android:textAllCaps="false" />

                <!-- Salva Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/salvaButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/blue"
                    android:text="Salva"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>