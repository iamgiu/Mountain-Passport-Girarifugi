<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Icona della notifica -->
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="top">

            <ImageView
                android:id="@+id/iconNotification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_notifications_black_24dp"
                app:tint="@color/green"
                android:background="@drawable/gradient_green_card" />

        </androidx.cardview.widget.CardView>

        <!-- Contenuto della notifica -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Titolo notifica -->
            <TextView
                android:id="@+id/textTitoloNotifica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuovo rifugio visitabile"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold" />

            <!-- Descrizione notifica -->
            <TextView
                android:id="@+id/textDescrizioneNotifica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Il Rifugio Monte Bianco Ã¨ ora disponibile per la tua prossima escursione!"
                android:textColor="#666666"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium"
                android:lineSpacingExtra="2dp" />

            <!-- Tempo e azioni -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Tempo -->
                <TextView
                    android:id="@+id/textTempo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 ore fa"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium" />

                <!-- Badge non letto (opzionale) -->
                <View
                    android:id="@+id/badgeNonLetto"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/gradient_green_card"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>