<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/stats_card_background">

    <!-- Header con avatar, nome utente, rating e data -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Avatar utente -->
        <ImageView
            android:id="@+id/userAvatarImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_person_24"
            android:scaleType="centerCrop"
            android:contentDescription="Avatar utente" />

        <!-- Nome utente e rating -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Utente"
                android:textColor="@color/blue_black"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­ 4.5"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_semibold" />
        </LinearLayout>

        <!-- Data recensione -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31/08/2025"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_medium" />
    </LinearLayout>

    <!-- Commento recensione -->
    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Commento della recensione..."
        android:textColor="@color/blue_black"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_medium"
        android:lineSpacingExtra="2dp" />

</LinearLayout>
