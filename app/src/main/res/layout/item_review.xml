<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/stats_card_background"
    android:layout_marginBottom="12dp"
    android:padding="16dp">

    <!-- Header con avatar, nome e rating -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Foto utente circolare -->
        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imageSecondPlace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_giovanni" />
        </androidx.cardview.widget.CardView>

        <!-- Container nome e rating -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Nome utente -->
            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marco Rossi"
                android:textColor="@color/blue_black"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textStyle="bold" />

            <!-- Rating con stelle -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/ratingStarsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★★"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ratingValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Data recensione -->
        <TextView
            android:id="@+id/reviewDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 giorni fa"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_medium" />

    </LinearLayout>

    <!-- Testo della recensione -->
    <TextView
        android:id="@+id/reviewTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rifugio bellissimo con una vista mozzafiato sul Monte Bianco. Il personale è stato molto accogliente e la cucina ottima. Consiglio vivamente di prenotare in anticipo, soprattutto nei weekend estivi."
        android:textColor="@color/blue_black"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_medium"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>